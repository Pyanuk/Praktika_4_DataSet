        xmlns:local="clr-namespace:Praktika_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="850" Background="Aqua">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="Табличка NAME__COFFEE" Margin="0,0,0,338" Click="Button_Click"/>
        <Button Grid.Column="1" Content="Табличка CLIENT" Margin="0,0,0,338" Click="Button_Click_2"/>
        <Button Grid.Column="2" Content="Табличка ORDER__COFFEE" Margin="0,0,0,338" Click="Button_Click_3"/>
        <Button Grid.Column="2" Content="Табличка CUSTOMER__ORDER" Margin="216,0,0,338" Click="Button_Click_4" Grid.ColumnSpan="2"/>



        <Frame x:Name="PageFrame" Grid.Row="0" Margin="0,101,10,0"/>
        <Frame x:Name="PageFrame1" Margin="1,101,1,1" Grid.Column="1"/>
        <Frame x:Name="PageFrame2" Margin="2,101,2,2" Grid.Column="2"/>
        <Frame x:Name="PageFrame3" Margin="3,101,3,3" Grid.Column="3"/>

    </Grid>
</Window>
